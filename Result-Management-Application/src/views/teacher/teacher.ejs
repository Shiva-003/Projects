<%- include("../partials/_header") %>

<%- include("../partials/_navbar") %>

<div class="container-md">
    <%- include("../partials/_alert") %>

    <div class="mt-2 mb-4 d-md-flex justify-content-md-end">
        <a href="/teacher/create" class="btn btn-outline-primary" >Add New Record <i class="bi bi-person-fill"></i></a>
    </div>
    <% if(data.length > 0){ %>
        <table class="table table-striped table-hover mt-3 border">
            <thead style="background-color: #BE5A83;color:white">
            <tr>
                <th scope="col">Roll No.</th>
                <th scope="col">Name</th>
                <th scope="col">Date of Birth</th>
                <th scope="col">Score</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
                <% data.forEach(user =>{ %>
                    <tr>
                        <th scope="row"><%= user.rollno %></th>
                        <td><%= user.name %></td>
                        <td><%= user.dob %></td>
                        <td><%= user.score %></td>
                        <td> <a href="/teacher/update?rollno=<%= user.rollno %>" class="me-3"><i class="bi bi-pencil"></i></a>
                            <a href="/teacher/delete/<%= user.rollno %>" class="text-danger" onclick="return confirm('Are you sure you want to delete?')"><i class="bi bi-x-lg"></i></a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% }else{ %>
        <div class="empty text-center">
            <h4>No Student Record Present, please add students.</h4>
        </div>
        
    <% } %>
</div>

<%- include("../partials/_footer") %>